<StartServicePage>:
    RelativeLayout:
        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1  # Background color (dark gray)
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: 'Logout'
            size_hint: None, None
            size: 100, 50
            font_size: 18
            pos_hint: {'right': 1.0, 'top': 1.0}
            on_release: root.logout()

        FloatLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Image:
                source: 'green_round_button.png'  # Replace with the actual path to your image
                size_hint: 1, 1

            Button:
                text: 'Start Service'
                size_hint: (0.4, 0.1)
                font_size: 24
                background_normal: ''
                background_color: 0, 0, 0, 0
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.start_service()  # Replace with your logic to start the service

