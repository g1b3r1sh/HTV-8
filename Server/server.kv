<RegistrationPage>:
    RelativeLayout:
        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1  # Background color (dark gray)
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            text: 'Login'
            size_hint: None, None
            size: 100, 50
            font_size: 18
            pos_hint: {'right': 1.0, 'top': 1.0}
            on_release: root.go_to_login_page()

        BoxLayout:
            orientation: 'vertical'
            padding: 20
            spacing: 10
            size_hint: None, None
            size: 400, 450
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: 'Registration Page'
                font_size: 36

            BoxLayout:
                orientation: 'vertical'
                spacing: 5

                TextInput:
                    id: name_input
                    hint_text: 'Name'
                    font_size: 18
                    write_tab: False
                    multiline: False

                TextInput:
                    id: email_input
                    hint_text: 'Email'
                    font_size: 18
                    write_tab: False
                    multiline: False

                TextInput:
                    id: password_input
                    hint_text: 'Password'
                    password: True
                    font_size: 18
                    write_tab: False
                    multiline: False

                TextInput:
                    id: comp_name_input
                    hint_text: 'Company or Organization name'
                    font_size: 18
                    write_tab: False
                    multiline: False
                    on_text_validate: root.register_user(name_input.text, email_input.text, password_input.text, comp_name_input.text)

            Button:
                text: 'Register'
                size_hint: None, None
                size: 150, 60
                font_size: 24
                background_normal: ''
                background_color: 0.2, 0.6, 0.2, 1
                on_release: root.register_user(name_input.text, email_input.text, password_input.text, comp_name_input.text)


